@{
    
}

@model IEnumerable<Image>

<h4>View Images</h4>
<h2>All Images For Burial @ViewBag.burialname</h2>
<br /><br />

<h3>@ViewBag.NoImages</h3>

<div class="row">
    @foreach (var i in Model)
    {
        <div class="col-4">

            <h5>Image #@i.ImageId</h5>
            <br />
            <img src="@i.ImagePath" class="img-fluid" />
            <br /><br />
        </div>
    }
</div>


<form method="post" asp-action="BurialDetails">
    <input type="hidden" name="id" value="@ViewBag.BurialID"/>
    <button type="submit" class="btn btn-secondary blue_button">Back</button>

</form>
