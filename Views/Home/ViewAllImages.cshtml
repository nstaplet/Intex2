@{
    int counter = 0;
}

@model IEnumerable<Image>

<h2>@ViewBag.BurialName</h2>

<h3>@ViewBag.NoImages</h3>
<br />
<form method="post" asp-action="BurialDetails">
    
    <input type="hidden" name="id" value="@ViewBag.BurialID" />
    <button class="btn blue_button" type="submit">Back</button>
</form>
<br />
<div class="row">

    @foreach (var i in Model)
    {
        counter++;
        <div class="col-6">
            
            <h4>Image @counter</h4>
            <img src="@i.ImagePath" class="img-fluid" />
         </div>
     }

</div>

<br />

<form method="post" asp-action="BurialDetails">

    <input type="hidden" name="id" value="@ViewBag.BurialID" />
    <button class="btn blue_button" type="submit">Back</button>
</form>
