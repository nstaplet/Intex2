@{
}
@model IEnumerable<IdentityRole>

<h1 class="blue_button text-white" style="padding-left: .3em"> All Roles</h1>
<br />
<a asp-action="Create" class="btn btn-secondary">Create a Role</a>
<br />
<br />
<table class="table table-sm table-bordered table-bordered">
    <tr><th>ID</th><th>Name</th><th>Add/Remove Users</th><th>Delete</th></tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td><a class="blue_button btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Add/Remove</a></td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>